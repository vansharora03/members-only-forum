html
    head 
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title= title
        style 
            include ../styles/styles.css
    body 
        h1
            a(href="/") Home
        h1 
            a(href="/messages") Messages
        if !user
            h1 
                a(href="/users/sign-up") Sign Up
            h1
                a(href="/users/log-in") Log In
        if user
            h2 Signed in as #{user.username}
            a(href="/users/log-out") Log Out 
        block content