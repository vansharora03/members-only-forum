html
    head 
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title= title
        style 
            include ../styles/styles.css
    body
        div(class="navbar") 
            h1
                a(href="/") Home
            h1 
                a(href="/messages") Messages
            if !currentUser
                h1 
                    a(href="/users/sign-up") Sign Up
                h1
                    a(href="/users/log-in") Log In
            if currentUser
                h2 Signed in as #{currentUser.username}
                a(href="/users/log-out") Log Out 
                if !currentUser.is_vip
                    p
                        a(href="/users/member-key") Become a VIP member
                else
                    if !currentUser.is_admin
                            p
                                a(href="/users/admin-key") Become an admin
        block content